#########################################################
#		Local Compiler Rules			#
#########################################################

#--objectrule--#	$(CXX) $(CFLAGS) $(CDEFS) $(CINCS) -o $@ -c
#--linkerrule--#	$(LINKER) $@ $(CFLAGS) $(LFLAGS) *.o$B $(LIBS)
#--objectsuffix--#	$B
#--targetprefix--#	../lib$D/
#--targetsuffix--#	.so
#--buildtargets--#	targets

.SUFFIXES :

B	=
%-dbg	: B = -dbg

D	=
%-dbg	: D = /dbg


CDEFS	= 
CINCS	=
CBASE	= -g -fPIC -fexceptions -frtti -Wall -Wno-array-bounds -Wno-char-subscripts -Wno-comment -Wno-delete-non-virtual-dtor -Wno-maybe-uninitialized -Wno-parentheses -Wno-return-type -Wno-reorder -Wno-strict-aliasing -Wno-sign-compare -Wno-switch -Wno-trigraphs -Wno-unused-but-set-variable -Wno-unused-function -Wno-unused-value -Wno-unused-variable -Wno-misleading-indentation
CDBG	= 
CREL	= -O2 -U_FORTIFY_SOURCE
CVER	= ${CREL}

CFLAGS	= ${CVER} ${CBASE}

LINKER	= VLINK-CC
LIBS	= ${LOCALLIBS} -lpthread -luuid
LBASE	= -shared -z combreloc '-Wl,-rpath=$$ORIGIN' -Wl,-h${@F}
LFLAGS	= ${LBASE} -L ../lib$D

release : targets

debug : targets-dbg

targets-dbg :
	@$(MAKE) B=-dbg D=/dbg CVER=${CDBG} targets

clean-dbg :
	@$(MAKE) B=-dbg D=/dbg clean
	
clean-all : clean clean-dbg
